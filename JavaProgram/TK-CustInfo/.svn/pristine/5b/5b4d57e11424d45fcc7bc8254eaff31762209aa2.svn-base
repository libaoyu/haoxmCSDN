		//删除
		function del(Id){
			bootbox.confirm("确定要删除吗?", function(result) {
				if(result) {
					top.jzts();
					var url = "<%=basePath%>questionnaire/delete.do?questionnaireId="+Id+"&tm="+new Date().getTime();
					$.get(url,function(data){
						if(data=='exist'){
							alert("此问题仍在使用不能删除！如果想删除，请先删除该问题的下属或者结果！");
							nextPage(${page.currentPage});
						}else if(data=='success'){
							alert("删除成功！");
							nextPage(${page.currentPage});
						}else{
							alert("未知错误！请联系管理员！");
							nextPage(${page.currentPage});
						}
					});
				}
			});
		}
		
		//修改
		function edit(Id){
			 top.jzts();
			 var diag = new top.Dialog();
			 diag.Drag=true;
			 diag.Title ="编辑";
			 diag.URL = '<%=basePath%>questionnaire/goEdit.do?questionnaireId='+Id;
			 diag.Width = 850;
			 diag.Height = 655;
			 diag.CancelEvent = function(){ //关闭事件
				 if(diag.innerFrame.contentWindow.document.getElementById('zhongxin').style.display == 'none'){
					 nextPage(${page.currentPage});
				}
				diag.close();
			 };
			 diag.show();
		}
		//展示二维码
		function uploadEnCode(id,level,time,levelStr,shortUrl){
			 top.jzts();
			 var diag = new top.Dialog();
			 diag.Drag=true;
			 //diag.Title =title+"</br>"+time+"&nbsp;&nbsp;&nbsp;&nbsp;"+levelStr;
			 diag.Title ="二维码详情";
			 diag.Title.height=1000;
			 diag.URL = '<%=basePath%>questionnaire/uploadEnCode.do?questionnaireId='+id+'&level='+level+'&shortUrl'+shortUrl;
			 diag.Width = 600;
			 diag.Height = 410;
			 diag.CancelEvent = function(){ //关闭事件
				 if(diag.innerFrame.contentWindow.document.getElementById('zhongxin').style.display == 'none'){
					 nextPage(${page.currentPage});
				}
				diag.close();
			 };
			 diag.show();
		}
		</script>
		
		<script type="text/javascript">
		
		$(function() {
			
			//下拉框
			$(".chzn-select").chosen(); 
			$(".chzn-select-deselect").chosen({allow_single_deselect:true}); 
			
			//日期框
			$('.date-picker').datepicker();
			
			//复选框
			$('table th input:checkbox').on('click' , function(){
				var that = this;
				$(this).closest('table').find('tr > td:first-child input:checkbox')
				.each(function(){
					this.checked = that.checked;
					$(this).closest('tr').toggleClass('selected');
				});
					
			});
			
		});
		
		
		//批量操作
		function makeAll(msg){
			bootbox.confirm(msg, function(result) {
				if(result) {
					var str = '';
					for(var i=0;i < document.getElementsByName('ids').length;i++)
					{
						  if(document.getElementsByName('ids')[i].checked){
						  	if(str=='') str += document.getElementsByName('ids')[i].value;
						  	else str += ',' + document.getElementsByName('ids')[i].value;
						  }
					}
					if(str==''){
						bootbox.dialog("您没有选择任何内容!", 
							[
							  {
								"label" : "关闭",
								"class" : "btn-small btn-success",
								"callback": function() {
									//Example.show("great success");
									}
								}
							 ]
						);
						
						$("#zcheckbox").tips({
							side:3,
				            msg:'点这里全选',
				            bg:'#AE81FF',
				            time:8
				        });
						
						return;
					}else{
						if(msg == '确定要删除选中的数据吗?'){
							top.jzts();
							$.ajax({
								type: "POST",
								url: '<%=basePath%>questionnaire/deleteAll.do?tm='+new Date().getTime(),
						    	data: {DATA_IDS:str},
								//dataType:'json',
								//beforeSend: validateData,
								cache: false,
								success: function(data){
									if(data.indexOf("|")>-1){
										if(data.split("|")[0]=='notAll '){
											alert("批量删除不成功的条数为："+data.split("|")[1]+"条，这些数据仍在使用！如果想删除，请先删除使用该问卷的数据！");
										}
									} else if(data=='all'){
										alert("删除成功！");
									}else {
										alert("未知错误！请联系管理员！");
									}
									nextPage(${page.currentPage});
								}
							});
						}
					}
				}
			});
		}
		
		//导出excel
		function toExcel(){
			window.location.href='<%=basePath%>questionpage/excel.do';
		}
		function clearAll(){
			//title-lastLoginStart-lastLoginEnd-questionnaireId
			$('#title').val('');
			$('#lastLoginStart').val('');
			$('#lastLoginEnd').val('');
			$('#questionnaireId').val('');
			//validState--releaseStatus
			$('#validState').val('');
			$('#releaseStatus').val('');
		}
		function importExcle(){
			window.location.href='<%=basePath%>questionnaireTemp/toImportExcle.do';
		}
		//复制问卷
		function copy(){
			var str = '';
			for(var i=0;i < document.getElementsByName('ids').length;i++)
			{
				  if(document.getElementsByName('ids')[i].checked){
				  	if(str=='') str += document.getElementsByName('ids')[i].value;
				  	else str += ',' + document.getElementsByName('ids')[i].value;
				  }
			}
			if(str==''){
				bootbox.dialog("您没有选择任何内容!", 
					[
					  {
						"label" : "关闭",
						"class" : "btn-small btn-success",
						"callback": function() {
							//Example.show("great success");
							}
						}
					 ]
				);
				
				$("#zcheckbox").tips({
					side:3,
