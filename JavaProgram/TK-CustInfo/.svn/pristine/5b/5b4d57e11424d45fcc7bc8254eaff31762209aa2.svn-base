		}
		
		
		$(top.hangge());
		
		//检索
		function search(){
			top.jzts();
			$("#Form").submit();
		}
		
		//新增
		function add(){
			//$('#myModal').css("display","none");
			$('#myModal').modal('show');
			<%--  top.jzts();
			 var diag = new top.Dialog();
			 diag.Drag=true;
			 diag.Title ="新增";
			 var confirmExport='';
			 confirmExport=confirm("是否创建星级问卷？<br/>点击是创建星级问卷，点击否创建普通问卷。");
			 if(confirmExport){
